@using PortLaMontagne.Enums
@model Article
@{
    Layout = "_Layout";
    ViewData["Title"] = "Création";
    ViewData["FormStatus"] = FormStatusEnum.Create;

}

@section Styles
{
    <!-- Smart Forms CSS -->
    <link href="~/smartforms/Templates/css/smart-loader.css" rel="stylesheet"/>
    <link href="~/smartforms/Templates/css/smart-addons.css" rel="stylesheet"/>
    <link href="~/smartforms/Templates/css/smart-forms.css" rel="stylesheet"/>
    <link href="~/css/plugins/summernote/summernote-bs4.css" rel="stylesheet">
}

<partial name="_Form" model="Model" view-data="ViewData"/>

@section Scripts
{
    <script src="~/js/plugins/summernote/summernote-bs4.js"></script>

    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 400,
                width: 800,
                callbacks: {
                    onImageUpload: function (image) {
                        uploadImage(image[0])
                    }
                }
            });
        });
    </script>

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}