<!DOCTYPE html>
<html>
<head>
    <partial name="Head"/>
    <title>
        @ViewData["Title"]
        @((string)ViewData["Title"] != "" ? "| " : " ") Administration | portlamontagne.fr | Ça grimpe autour de Toulon !
    </title>
    @await RenderSectionAsync("Styles", false)
</head>
<body>
<!--Header-->
<partial name="Headerbody"/>
<!--End Header-->
<div class="wrapper">
    <div flashes></div>
    <section class="page-header b-bordered">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <h1 class="title">Tableau de bord d'administration</h1>
                </div>
            </div>
        </div>
    </section>
    <div class="page-inner no-border">
        <div class="container">
            <div class="row">
                <div class="col-md-3 left-side-sidebar pr-none">
                    <div class="docs-navigation">
                        <ul class="nav nav-list nav-shortcodes">
                            <li class="active">
                                <label class="tree-toggler nav-header">Administration</label>
                                <ul class="nav nav-list tree">
                                    <li>
                                        <a asp-controller="Home" asp-action="Index" asp-area="Admin"><i class="fa fa-dashboard"></i>Tableau de bord</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="active">
                                <label class="tree-toggler nav-header">Articles</label>
                                <ul class="nav nav-list tree">
                                    <li>
                                        <a asp-controller="Article" asp-action="Index" asp-area="Admin"><i class="fa fa-list"></i>Liste</a>
                                    </li>
                                    <li>
                                        <a asp-controller="Article" asp-action="Create" asp-area="Admin"><i class="fa fa-pencil"></i>Créer</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="active">
                                <label class="tree-toggler nav-header">Commentaires</label>
                                <ul class="nav nav-list tree">
                                    <li>
                                        <a asp-controller="Comment" asp-action="Index" asp-area="Admin"><i class="fa fa-list"></i>Liste</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="active">
                                <label class="tree-toggler nav-header">Utilisateurs</label>
                                <ul class="nav nav-list tree">
                                    <li>
                                        <a href="{{ path('admin_user_index') }}"><i class="fa fa-list"></i>Liste</a>
                                    </li>
                                </ul>
                            </li>
                            <li class="active">
                                <label class="tree-toggler nav-header">Catégories</label>
                                <ul class="nav nav-list tree">
                                    <li>
                                        <a href="{{ path('admin_category_index') }}"><i class="fa fa-list"></i>Liste</a>
                                    </li>
                                    <li>
                                        <a href="{{ path('admin_category_new') }}"><i class="fa fa-pencil"></i>Créer</a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                @RenderBody()
            </div>
        </div>
    </div>
</div>

<partial name="Footer"/>
<partial name="Scripts"/>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>